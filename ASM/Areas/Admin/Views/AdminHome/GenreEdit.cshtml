@model ASM.Models.Genre
@{
    ViewData["Title"] = "GenreEditView";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section>
    @using (Html.BeginForm("GenreEdit", "AdminHome", FormMethod.Post))
    {
        <div class="mt-3">
            <input type="hidden" asp-for="GenreId" />
            <div class="input-box">
                <span class="details">Title</span>
                <input type="text" asp-for="GenreName" placeholder="@Model.GenreName">
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Save edit</button>
            <button asp-controller="AdminHome" asp-action="Genre" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Cancel</button>
        </div>
    }
</section>

