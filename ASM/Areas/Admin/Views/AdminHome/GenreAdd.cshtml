@model ASM.Models.Genre
@{
    ViewData["Title"] = "GenreAddView";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<section>
    @using(Html.BeginForm("GenreAdd", "AdminHome", FormMethod.Post))
    {
        <div class="mt-3">
            <input type="hidden" asp-for="GenreId" />
            <div class="input-box">
                <span class="details">Title</span>
                <input type="text" asp-for="@Model.GenreName" placeholder="Enter genre name">
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" type="submit">Create new Genre</button>
            <button asp-controller="AdminHome" asp-action="Genre">Cancel</button>
        </div>
    }
</section>

